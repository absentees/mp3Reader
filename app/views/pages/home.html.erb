<% if user_signed_in? %>
    <p>
      <% if @feed.websites.count.equal?(0) %>
          No websites added yet!
      <% else %>
        <table>
          <tr>
            <th>Website</th>
            <th>Link</th>
            <th></th>
            <th></th>
          </tr>

          <% @feed.websites.each do |website| %>
              <% website.links.each do |link| %>
                  <tr>
                    <td><%= link_to website.name, website.url %></td>
                    <td><%= link_to link.file_name, link.url %></td>
                  </tr>
              <% end %>
          <% end %>
        </table>
    <% end %>
<% else %>
    <p><%= link_to "Sign up", new_user_registration_path %> / log in</p>

<% end %>