<% if user_signed_in? %>
    <p>
      <% if @feed.websites.count.equal?(0) %>
          No websites added yet!
      <% else %>
           <table>
            <tr>
              <th>Name</th>
              <th>Url</th>
              <th>Feed Url</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>

            <% @feed.websites.each do |website| %>
                <tr>
                  <td><%= website.name %></td>
                  <td><%= website.url %></td>
                  <td><%= website.feedUrl %></td>
                  <td><%= link_to 'Show', website %></td>
                  <td><%= link_to 'Edit', edit_website_path(website) %></td>
                  <td><%= link_to 'Destroy', website, :confirm => 'Are you sure?', :method => :delete %></td>
                </tr>
            <% end %>
          </table>
      <% end %>
<% else %>
    <p><%= link_to "Sign up", new_user_registration_path %> / log in</p>

<% end %>